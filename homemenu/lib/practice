class IngredientRow extends StatelessWidget {                // ‚Üê Class OPENS {
  final String icon;
  final String name;
  final String quantity;

  const IngredientRow({                                       // ‚Üê Constructor OPENS (
    super.key,
    required this.icon,
    required this.name,
    required this.quantity,
  });                                                         // ‚Üê Constructor CLOSES )

  @override
  Widget build(BuildContext context) {                        // ‚Üê build method OPENS {
    return Padding(                                           //   ‚Üê Padding OPENS (
      padding: const EdgeInsets.symmetric(vertical: 8.0),
      
      child: Row(                                             //     ‚Üê Row OPENS (
        children: [                                           //       ‚Üê List OPENS [
          
          Text(                                               //         ‚Üê Text OPENS (
            icon, 
            style: TextStyle(fontSize: 24)
          ),                                                  //         ‚Üê Text CLOSES )
          
          SizedBox(width: 16),
          
          Expanded(                                           //         ‚Üê Expanded OPENS (
            child: Text(                                      //           ‚Üê Text OPENS (
              name,
              style: TextStyle(fontSize: 16),
            ),                                                //           ‚Üê Text CLOSES )
          ),                                                  //         ‚Üê Expanded CLOSES )
          
          SizedBox(width: 16),
          
          Text(                                               //         ‚Üê Text OPENS (
            quantity,
            style: TextStyle(                                 //           ‚Üê TextStyle OPENS (
              fontSize: 16, 
              color: Colors.grey
            ),                                                //           ‚Üê TextStyle CLOSES )
          ),                                                  //         ‚Üê Text CLOSES )
          
        ],                                                    //       ‚Üê List CLOSES ]
      ),                                                      //     ‚Üê Row CLOSES )
    );                                                        //   ‚Üê Padding CLOSES )
  }                                                           // ‚Üê build method CLOSES }
}                                                             // ‚Üê Class CLOSES }